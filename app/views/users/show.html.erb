<h1><%= @user.username %>'s profile</h1>

<h6>About me: <%= @user.about_me %></h6>

<h3>Projects proposed</h3>
<% if @projects.empty? %>
  <p><%= @user.username %> has not created any projects yet</p>
<% else %>
  <ul>
    <% @projects.each do |project| %>
      <li><%= link_to(project.name, project_path(project)) %></li>
    <% end %>
  </ul>
<% end %>

<%= link_to("Propose a new project!", new_project_path) %>

<h3>Skills</h3>
<% if @skills.empty? %>
  <p><%= @user.username %> has not listed any skills yet</p>
<% else %>
  <ul>
    <% @skills.each do |skill| %>
      <li><%= skill.name %></li>
    <% end %>
  </ul>
<% end %>

<h3>Interests</h3>
<% if @interests.empty? %>
  <p><%= @user.username %> has not listed any interests yet</p>
<% else %>
  <ul>
    <% @interests.each do |interest| %>
      <li><%= interest.name %></li>
    <% end %>
  </ul>
<% end %>
